{% extends "::base.html.twig" %}
    {%block header%}
      <section class="content-header">
      <h1>
        Mode paiement
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Accueil</a></li>
        
      </ol>
    </section>
    {%endblock%}
    {%block body%}
                          
           <div class="box box-success">
             <div class="box-header with-border">
              <h3 class="box-title">Mode de paiement</h3>
            
            </div>
  
